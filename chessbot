    <h1>Chess Titans Academy</h1>

    <div id="game-container">
        <div id="board"></div>

        <div class="sidebar">
            <div class="control-group">
                <label for="playerColor">Play As</label>
                <select id="playerColor">
                    <option value="w">White</option>
                    <option value="b">Black</option>
                </select>
            </div>

            <div class="control-group">
                <label for="difficulty">Stockfish Level</label>
                <select id="difficulty">
                    <option value="0">Level 1 (Very Easy - Beginner)</option>
                    <option value="5">Level 2 (Easy - Casual)</option>
                    <option value="10">Level 3 (Intermediate)</option>
                    <option value="20">Level 4 (Titan - Grandmaster)</option>
                </select>
            </div>
            
            <div class="control-group">
                <label>Game Controls</label>
                <button id="startBtn" class="primary">New Game</button>
                <button id="flipBtn">Flip Board</button>
            </div>

            <div id="status">White to move</div>
            <div id="evaluation">Eval: 0.0</div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chessboard-js/1.0.0/chessboard-1.0.0.min.js"></script>

    <script>
        // --- VARIABLES ---
        var board = null;
        var game = new Chess();
        var stockfish = null;
        var isEngineReady = false;
        
        var $status = $('#status');
        var $evaluation = $('#evaluation');

        // --- 1. INITIALIZE STOCKFISH ---
        async function initStockfish() {
            const stockfishUrl = 'https://cdnjs.cloudflare.com/ajax/libs/stockfish.js/10.0.0/stockfish.js';
            const response = await fetch(stockfishUrl);
            const script = await response.text();
            const blob = new Blob([script], { type: 'application/javascript' });
            stockfish = new Worker(window.URL.createObjectURL(blob));

            stockfish.onmessage = function(event) {
                var line = event.data;
                
                if (line === 'uciok') {
                    isEngineReady = true;
                }

                // AI made a move
                if (line.startsWith('bestmove')) {
                    var move = line.split(' ')[1];
                    game.move(move, {sloppy: true});
                    board.position(game.fen());
                    updateStatus();
                }

                if (line.includes('score cp')) {
                    let score = line.split('score cp ')[1].split(' ')[0];
                    $evaluation.text("Eval: " + (parseInt(score) / 100).toFixed(2));
                } else if (line.includes('score mate')) {
                    let score = line.split('score mate ')[1].split(' ')[0];
                    $evaluation.text("Mate in " + Math.abs(score));
                }
            };

            stockfish.postMessage('uci');
        }

        // --- 2. GAME LOGIC ---
        function onDragStart (source, piece, position, orientation) {
            if (game.game_over()) return false;

            // NEW: Only allow picking up pieces of the player's color
            // If board is white, player is white. If piece starts with 'b' (black), return false.
            if (orientation === 'white' && piece.search(/^b/) !== -1) return false;
            // If board is black, player is black. If piece starts with 'w' (white), return false.
            if (orientation === 'black' && piece.search(/^w/) !== -1) return false;
        }

        function onDrop (source, target) {
            var move = game.move({
                from: source,
                to: target,
                promotion: 'q'
            });

            if (move === null) return 'snapback';

            updateStatus();
            makeEngineMove();
        }

        function onSnapEnd () {
            board.position(game.fen());
        }

        function makeEngineMove() {
            if(!isEngineReady) return;
            if(game.game_over()) return;

            var level = parseInt($('#difficulty').val());
            var depth = 15; 
            
            // --- DIFFICULTY TUNING ---
            if (level === 0) {
                depth = 1;
                stockfish.postMessage('setoption name Skill Level value 0');
                stockfish.postMessage('setoption name MultiPV value 10'); 
            } 
            else if (level === 5) {
                depth = 5;
                stockfish.postMessage('setoption name Skill Level value 5');
                stockfish.postMessage('setoption name MultiPV value 3');
            }
            else if (level === 10) {
                depth = 10;
                stockfish.postMessage('setoption name Skill Level value 10');
                stockfish.postMessage('setoption name MultiPV value 1');
            }
            else {
                depth = 18;
                stockfish.postMessage('setoption name Skill Level value 20');
                stockfish.postMessage('setoption name MultiPV value 1');
            }

            stockfish.postMessage('position fen ' + game.fen());
            stockfish.postMessage('go depth ' + depth);
        }

        function updateStatus () {
            var status = '';
            var moveColor = (game.turn() === 'b') ? 'Black' : 'White';

            if (game.in_checkmate()) {
                status = 'Game over, ' + moveColor + ' is in checkmate.';
            } else if (game.in_draw()) {
                status = 'Game over, drawn position';
            } else {
                status = moveColor + ' to move';
                if (game.in_check()) {
                    status += ', ' + moveColor + ' is in check';
                }
            }
            $status.html(status);
        }

        // --- 3. INITIALIZATION ---
        var config = {
            draggable: true,
            position: 'start',
            pieceTheme: 'https://chessboardjs.com/img/chesspieces/wikipedia/{piece}.png',
            onDragStart: onDragStart,
            onDrop: onDrop,
            onSnapEnd: onSnapEnd
        }
        
        board = Chessboard('board', config);
        
        $(window).resize(function() {
            board.resize();
        });

        initStockfish();

        // --- NEW GAME BUTTON LOGIC ---
        $('#startBtn').on('click', function() {
            game.reset();
            $evaluation.text("Eval: 0.0");
            
            // 1. Get chosen color
            var playerColor = $('#playerColor').val(); // 'w' or 'b'

            // 2. Set Board Orientation
            if (playerColor === 'w') {
                board.orientation('white');
            } else {
                board.orientation('black');
            }
            
            board.start();
            updateStatus();

            // 3. If Player chose Black, AI (White) must move first immediately
            if (playerColor === 'b') {
                // Short delay to let board render
                window.setTimeout(makeEngineMove, 500);
            }
        });

        $('#flipBtn').on('click', function() {
            board.flip();
        });
    </script>
</body>
</html>
