            box-sizing: border-box;
        }

        /* --- CHESS BOARD --- */
        #board {
            width: 100%;
            max-width: 500px;
            touch-action: none; 
            box-shadow: 0 10px 20px rgba(0,0,0,0.4);
            border: 5px solid rgba(255,255,255,0.2);
        }

        /* --- SIDEBAR / CONTROLS --- */
        .sidebar {
            width: 100%;
