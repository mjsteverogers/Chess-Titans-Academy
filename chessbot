        }

        h1 { 
            color: #fff; 
            margin: 15px 0; 
            font-size: 1.8rem;
            text-align: center;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            font-weight: 800;
            letter-spacing: 1px;
        }
        
        /* --- LAYOUT CONTAINER --- */
        #game-container {
            display: flex;
            flex-direction: column; 
            gap: 20px;
